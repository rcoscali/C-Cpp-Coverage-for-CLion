<idea-plugin>
    <id>com.zero9178</id>
    <name>C/C++ Coverage</name>
    <version>2.0.0</version>
    <vendor email="z3r09178@gmail.com" url="https://github.com/zero9178/GCoverage4CLion"/>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
    <idea-version since-build="173.0"/>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- uncomment to enable plugin in all products

    -->

    <depends>com.intellij.modules.clion</depends>
    <depends>com.intellij.modules.lang</depends>

    <application-components>
        <component>
            <implementation-class>net.zero9178.cov.settings.CoverageGeneratorSettings</implementation-class>
        </component>
    </application-components>

    <project-components>
        <component>
            <interface-class>net.zero9178.cov.window.CoverageView</interface-class>
            <implementation-class>net.zero9178.cov.window.CoverageViewImpl</implementation-class>
        </component>
        <component>
            <implementation-class>net.zero9178.cov.editor.CoverageHighlighter</implementation-class>
        </component>
    </project-components>

    <extensions defaultExtensionNs="com.intellij">
        <applicationConfigurable instance="net.zero9178.cov.window.SettingsWindowImpl" displayName="C/C++ Coverage"
                                 groupId="language"/>
        <toolWindow id="C/C++ Coverage" anchor="right" factoryClass="net.zero9178.cov.window.CoverageWindowFactory"
                    icon="AllIcons.Toolwindows.ToolWindowCoverage"/>
        <!-- Add your extensions here -->
    </extensions>

    <extensions defaultExtensionNs="cidr">
        <runConfigurationExtension implementation="net.zero9178.cov.CoverageConfigurationExtension"/>
    </extensions>

</idea-plugin>